<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Story Map</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>story_map</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>

	<!-- ✅ Google AdMob -->
	<key>GADApplicationIdentifier</key>
	<string>ca-app-pub-9479192831415354~6852440031</string>

	<key>LSRequiresIPhoneOS</key>
	<true/>

	<!-- ✅ Flutter view embedding -->
	<key>io.flutter.embedded_views_preview</key>
	<true/>

	<!-- ✅ Ağ isteklerine tam izin -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
	</dict>

	<!-- ✅ Apple ile devam et için eklendi -->
	<key>NSAppleIDUsageDescription</key>
	<string>Apple hesabınızla giriş yapabilmeniz için gerekli.</string>
	<!-- ✅ Kamera / Galeri / Reklam izinleri -->
	<key>NSCameraUsageDescription</key>
	<string>Kamera erişimi fotoğraf çekmek için gereklidir.</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Fotoğraf yüklemek için galeri erişimi gereklidir.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>Fotoğraf veya içerik kaydetmek için galeriye erişim gerekiyor.</string>
	<key>NSUserTrackingUsageDescription</key>
	<string>Uygulama deneyimini geliştirmek ve reklamları özelleştirmek için izin gerekiyor.</string>

	<!-- ✅ Konum izinleri (Apple Maps / Geolocator için kritik) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Konumunuzu haritada rota ve mekanları göstermek için kullanıyoruz.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Konumunuzu rota takibi için arka planda da kullanıyoruz.</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>Uygulama konumunuzu sürekli izlemek için arka plan erişimi gerektiriyor.</string>

	<!-- ✅ Arka planda konum izleme (rota takibi için gerekli) -->
	<key>UIBackgroundModes</key>
	<array>
		<string>location</string>
	</array>

	<!-- ✅ Uygulama başlatma ekranı -->
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>

	<!-- ✅ Durum çubuğu -->
	<key>UIStatusBarHidden</key>
	<false/>

	<!-- ✅ Yön desteği -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
</dict>
</plist>